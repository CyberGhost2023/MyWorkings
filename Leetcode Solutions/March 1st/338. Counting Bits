//Question Link- https://leetcode.com/problems/counting-bits/


//Time Complexity- O(n)

class Solution {
public:
    vector<int> countBits(int n) {
     vector<int> vt(n+1);
        for(int i=0;i<=n;i++)
        {
            int x=i;
            int cnt=0;
            while(x)
            {
                x=x&(x-1);
                cnt++;
            }
            vt[i]=cnt;
        }
        return vt;
    }
};


// Another Solution

class Solution {
public:
    vector<int> countBits(int num) {
        vector<int> ret(num+1, 0);
        for (int i = 1; i <= num; ++i)
            ret[i] = ret[i&(i-1)] + 1;
        return ret;
    }
};
