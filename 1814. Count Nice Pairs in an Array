/*
Question Link- https://leetcode.com/problems/count-nice-pairs-in-an-array/
*/
class Solution {
public:
    int countNicePairs(vector<int>& nums) {
        int n=nums.size(),mod=1e9+7;
        unordered_map<int,int> mp;
        for(auto x:nums)
        {
            int y=x, sum=0;
            while(y)
            {
                sum =sum*10+y%10;
                y/=10;
            }
            int dif=x-sum;
            mp[dif]++;
        }
        long long tot=0;
        for(auto x:mp)
        {
            tot=(tot+(x.second-1)*1ll*(x.second)/2)%mod;
        }
        return tot;
    }
};
